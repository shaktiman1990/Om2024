# Brute Force Approch
class Solution {
public:
    int maxArea(vector<int>& height) 
    {
        int maxwater=0;
        for(int i=0;i<height.size();i++)
        {
            for(int j=i+1;j<height.size();j++)
            {
                int ht=min(height[i],height[j]);
               int width=j-i;
               int area=width*ht;
                
                if(area>maxwater)
                {
                    maxwater=area;
                }

            }
        }
        return maxwater;
    }
};

# PTIMAL WAY 
